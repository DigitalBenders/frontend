<% content_for :title do %><%= @subcategory.title %> - GOV.UK<% end %>

<main id="content" role="main" class="group category-page">
  <header class="page-header group">
    <div class="full-width">
      <h1><%= @subcategory.title %></h1>
    </div>
  </header>

  <div class="browse-container full-width industry-sector-browse">
    <div class="category-description">
      <p><%= @subcategory.details.description %></p>
    </div>

    <nav class="guidance">
      <h1>Guidance</h1>
      <ul>
        <% @results.each do |content| %>
          <li>
            <h2><a href="<%= content.web_url %>"><%= content.title %></a></h2>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</main>
