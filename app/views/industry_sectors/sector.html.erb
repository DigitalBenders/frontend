<% content_for :title do %><%= @sector.title %> - GOV.UK<% end %>

<main id="content" role="main" class="group category-page">
  <header class="page-header group">
    <div class="full-width">
      <h1><%= @sector.title %></h1>
    </div>
  </header>

  <div class="browse-container full-width group">
    <div class="category-description">
      <p><%= @sector.details.description %></p>
    </div>
    <ul class="sub-categories group">
      <% @child_tags.each do |category|%>
      <li>
        <h2><a href="<%= category.content_with_tag.web_url %>"><%= category.title %></a></h2>
        <p><%= category.details.description %></p>
      </li>
      <% end %>
    </ul>
  </div>
</main>
